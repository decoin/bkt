<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping package="com.bkt.bean">
	
		<class name="User" table="user">
			<id name="id" type="java.lang.Integer" column="id">
				<generator class="identity"></generator>
			</id>
			<property name="name" type="java.lang.String" column="name" not-null="true"></property>
			<property name="password" type="java.lang.String" column="password"></property>
			<property name="cardId" type="java.lang.String" column="cardid" ></property>			
			<property name="email" type="java.lang.String" column="email"></property>
			<property name="sex" type="java.lang.String" column="sex"></property>
			<property name="telephone" type="java.lang.String" column="telephone"></property>
			<property name="address" type="java.lang.String" column="address"></property>
			<property name="photo" type="java.lang.String" column="photo"></property>
				
		</class>
	
	</hibernate-mapping>